<?xml version="1.0"?>

<ruleset name="VyVSrules"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>
        Conjunto de Reglas para satisfacer los requerimientos provistos en el Trabajo Practico 2
        de la materia Verificacion y Validacion de Software (UNS) 2019.
        Realizado por Agustin Garcia.
    </description>

    <!-- Si exsiten metodos con complejidad ciclomatica mayor a 6  -->
    <rule ref="category/java/design.xml/CyclomaticComplexity">
    <properties>
        <property name="methodReportLevel" value="6" />
    </properties>
    </rule>

    <!-- Si existen variables locales que no se están utilizando -->
    <rule ref="category/java/bestpractices.xml/UnusedLocalVariable" />

    <!-- Si se está utilizando el System.out.println. -->
    <rule ref="category/java/bestpractices.xml/SystemPrintln" />

    <!-- Si se está llamando al método toString() sobre objeyos que ya son Strings -->
    <rule ref="category/java/performance.xml/StringToString" />

    <!-- Si se está reutilizando sólo una declaracion por línea  -->
    <rule ref="category/java/bestpractices.xml/OneDeclarationPerLine" />

</ruleset>